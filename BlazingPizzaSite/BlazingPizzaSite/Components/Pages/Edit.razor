@page "/edit/{pizzaId:guid}"
@inject IPizzaRepository Repository
@inject NavigationManager Navigation

<PageTitle>Edit</PageTitle>
<h3>Edit</h3>


<div class="row justify-content-center">
    <div class="col-6">
        <PizzaForm IsEditMode="true" PizzaId="@PizzaId" OnValidPizzaSubmit="EditPizza" />

    </div>
</div>



@code {
    [Parameter]
    public Guid PizzaId { get; set; }

    private async Task EditPizza(Pizza pizza)
    {
        await Repository.UpdatePizzaAsync(pizza);
        Navigation.NavigateTo("/");
    }

}
